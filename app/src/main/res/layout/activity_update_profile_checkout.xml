<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.UpdateProfileCheckoutActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/update_profile_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_header"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">



            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="First Name"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Last Name"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textEmailAddress" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone Number"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLength="15"
                android:inputType="number" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_address_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/address_name_txt"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPostalAddress" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:visibility="gone"
                android:id="@+id/edt_floor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/floor_txt"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPostalAddress" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_street_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/street_name_txt"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLength="40"
                android:inputType="textMultiLine"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_zip_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/zipcode_txt"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLength="40"
                android:inputType="textPostalAddress"
                />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:visibility="gone"
                android:id="@+id/edt_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/city_txt"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLength="40"
                android:inputType="textPostalAddress"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:visibility="gone"
                android:id="@+id/edt_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/state_txt"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLength="40"
                android:inputType="textPostalAddress"
                />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:visibility="gone"
                android:id="@+id/edt_country"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Country/Region"
                android:layout_marginTop="20dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:maxLength="40"
                android:inputType="text" />



            <Button
                android:id="@+id/tv_submit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/submit_txt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"/>


            <Button
                android:id="@+id/fuckoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/submit_txt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:visibility="invisible" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>