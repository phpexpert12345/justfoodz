<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="Edit Address"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:visibility="gone"
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/email_txt"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_address_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/address_name_txt"
                android:inputType="textPostalAddress"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />


            <com.rengwuxian.materialedittext.MaterialEditText
               android:visibility="gone"
                android:id="@+id/edt_floor_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/house_no_txt"
                android:inputType="text"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_street_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/street_name_txt"
                android:inputType="textMultiLine"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_address_direction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/landmark_optional"
                android:inputType="textMultiLine"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />



            <com.rengwuxian.materialedittext.MaterialEditText
                android:visibility="gone"
                android:id="@+id/edt_town_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/city_txt"
                android:inputType="textPostalAddress"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:visibility="gone"
                android:id="@+id/edt_country_region"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/country_txt"
                android:inputType="textPostalAddress"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_postcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/postcode_txt"
                android:inputType="textPostalAddress"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_uk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="@string/uk_txt"
                android:inputType="text"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp"
                android:visibility="gone"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edt_phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelPadding="2dp"
                app:met_floatingLabelTextSize="15sp" />


            <Button
                android:id="@+id/tv_submit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/submit_txt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"/>

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/submit_txt"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:visibility="invisible"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>