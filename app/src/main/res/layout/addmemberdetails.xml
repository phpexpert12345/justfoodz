<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/layoutCoupon"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/colorPrimary">



        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight=".1"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/addmemberdetail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/addwhite"/>
        </LinearLayout>

        <EditText
            android:id="@+id/membername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
             android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/name"
            android:gravity="center_vertical"
            android:hint="Enter Member Name"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColorHint="#8d8d8d"
            android:textSize="@dimen/sp_15" />
        <EditText
            android:id="@+id/memberemail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/membername"
            android:gravity="center_vertical"
            android:hint="Enter Member Email Address"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textColorHint="#8d8d8d"
            android:textSize="@dimen/sp_15" />
        <EditText
            android:id="@+id/membermobilenumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/memberemail"
            android:gravity="center_vertical"
            android:hint="Enter Member Mobile Number"
            android:paddingEnd="@dimen/dp_10"
            android:inputType="number"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textColorHint="#8d8d8d"
            android:textSize="@dimen/sp_15" />



        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_5">

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="#696565"
                android:text="Submit"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_18" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="#696565"
                android:text="Cancel"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>