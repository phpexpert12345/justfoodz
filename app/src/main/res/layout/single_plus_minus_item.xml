<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl_restaurant_information"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_item_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_1.5"
        android:paddingTop="@dimen/dp_5"
        android:text="12 Veggie Romana"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_name"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:weightSum="5">


        <ImageView
            android:id="@+id/iv_minus"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/minus" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:text="15"
            android:textColor="@color/LightGreenColor"
            android:textSize="@dimen/sp_15" />


        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_weight="1"
            android:src="@drawable/plus" />


        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12.00"
            android:textColor="@color/LightGreenColor"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_weight="1"
            android:src="@drawable/deactive" />
    </LinearLayout>

</RelativeLayout>


