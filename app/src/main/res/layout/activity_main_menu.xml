<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/menu_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_menu_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_header"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pre_order" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="@dimen/dp_100"
               android:layout_height="@dimen/dp_100"
               android:layout_gravity="center"
               android:layout_marginTop="15dp"
               android:gravity="center"
               android:background="@drawable/rectangle_white">

               <ImageView
                   android:id="@+id/iv_restaurant_logo"
                   android:layout_width="95dp"
                   android:layout_height="95dp"
                   android:scaleType="fitXY"/>
           </LinearLayout>

            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="FOUR SEASONS"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_restaurant_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="70-80 Carbtree Lane,BN15 9PJ,Lancing."
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#7c7979"
                android:textSize="11dp" />

            <LinearLayout
                android:id="@+id/rating_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                 android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                 android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_review1"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_2"
                    android:paddingStart="@dimen/dp_2" />

                <ImageView
                    android:id="@+id/iv_review2"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_2"
                    android:paddingStart="@dimen/dp_2" />

                <ImageView
                    android:id="@+id/iv_review3"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_2"
                    android:paddingStart="@dimen/dp_2" />

                <ImageView
                    android:id="@+id/iv_review4"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_2"
                    android:paddingStart="@dimen/dp_2"
                    android:background="@drawable/review_star" />

                <ImageView
                    android:id="@+id/iv_review5"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_2"
                    android:paddingStart="@dimen/dp_2" />

                <TextView
                    android:id="@+id/totalreviewww"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="totalreviewws"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/blueColor"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_fav_red"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:scaleType="fitXY"
                android:src="@drawable/redheart"
                android:padding="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_30"/>

            <ImageView
                android:id="@+id/img_fav_grey"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:scaleType="fitXY"
                android:src="@drawable/greyheart"
                android:padding="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_30"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_discount_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="@color/redColor"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_3"
                    android:text="% off"
                    android:textColor="@color/redColor"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_menu_choose"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rl_menu_top"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">


       <androidx.cardview.widget.CardView
           android:id="@+id/menu"
           android:layout_width="80dp"
           android:layout_height="80dp"
           app:cardCornerRadius="10dp"
           android:layout_gravity="center"
           android:layout_weight=".1"
           android:layout_margin="4dp"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:gravity="center">

               <ImageView
                   android:id="@+id/menured"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:background="@drawable/menu"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center"/>

               <ImageView
                   android:id="@+id/menuwh"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:visibility="gone"
                   android:background="@drawable/menuwh"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center"/>

               <TextView
                   android:id="@+id/tv_menu_txt"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/menu_txt"
                   android:textAllCaps="true"
                   android:gravity="center"
                   android:layout_marginTop="5dp"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/sp_10" />

               <TextView
                   android:id="@+id/tv_menu_txtw"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/menu_txt"
                   android:textAllCaps="true"
                   android:gravity="center"
                   android:visibility="gone"
                   android:layout_marginTop="5dp"
                   android:textColor="@color/white"
                   android:textSize="@dimen/sp_10" />
           </LinearLayout>

       </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/reviews"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/reviewsred"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/drinkred" />

                <ImageView
                    android:id="@+id/reviewswh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:background="@drawable/drinkwh"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>


                <TextView
                    android:id="@+id/tv_reviews_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/review_txt"
                    android:textAllCaps="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tvReviewsw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/review_txt"
                    android:textAllCaps="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/info"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight=".1"
            app:cardCornerRadius="10dp"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/infored"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/info"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/infowh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:background="@drawable/infoormationwh"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_information_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/information"
                    android:textAllCaps="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_information_txtw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/information"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/tablebooking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight=".1"
            android:layout_margin="4dp"
            app:cardCornerRadius="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bookingred"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/tablebookingred" />

                <ImageView
                    android:id="@+id/bookingwh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:background="@drawable/bookingtablewh"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"/>


                <TextView
                    android:id="@+id/bookingtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Table Booking"
                    android:textAllCaps="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/bookingtextwh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Table Booking"
                    android:textAllCaps="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_10" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_below="@+id/ll_menu_choose">

        <TextView
            android:id="@+id/tv_menu_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal of the day"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/arrow" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_cart"
        android:layout_below="@+id/rl_menu"
        android:layout_margin="@dimen/dp_5"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/LightGreenColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:text="@string/no_of_items"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <RelativeLayout
            android:id="@+id/cart_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="?attr/actionBarItemBackground"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:minWidth="20dp"
            android:paddingEnd="5dp"
            android:paddingStart="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hotlist_bell"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:gravity="center"
                android:src="@drawable/vector_cart" />

            <TextView
                android:id="@+id/tv_cart_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/hotlist_bell"
                android:layout_alignTop="@id/hotlist_bell"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/cart_count"
                android:gravity="center"
                android:minWidth="17sp"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="0dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>