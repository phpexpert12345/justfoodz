<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_350"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/featuredimage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:scaleType="fitXY"
                android:background="@drawable/noimage"/>
            <TextView
                android:id="@+id/featuredname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/calamar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/featuredimage"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:id="@+id/review_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_below="@+id/featuredname"
                android:layout_marginLeft="15dp">
                <ImageView
                    android:id="@+id/review_1"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_3" />
                <ImageView
                    android:id="@+id/review_2"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_3" />
                <ImageView
                    android:id="@+id/review_3"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_3" />
                <ImageView
                    android:id="@+id/review_4"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_3" />
                <ImageView
                    android:id="@+id/review_5"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/review_star"
                    android:paddingEnd="@dimen/dp_3"
                    android:paddingStart="@dimen/dp_3" />
            </LinearLayout>
            <TextView
                android:id="@+id/featuredaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8d8d8d"
                android:text="341 5th"
                android:textSize="11dp"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/review_layout"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:id="@+id/lnr_cusine"
                android:layout_below="@+id/featuredaddress"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Cuisine : "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_view_cuisinename"
                    android:layout_width="wrap_content"
                    android:text="Italian "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_meals"
                android:layout_below="@+id/lnr_cusine"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Meals : "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_view_meals"
                    android:layout_width="wrap_content"
                    android:text="Lunch, Dinner "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlt_location"
                android:layout_width="match_parent"
                android:layout_below="@+id/lnr_meals"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_30sdp"
                        android:background="@drawable/roundbackwithgrayback"
                        android:gravity="center"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@drawable/ic_location_on_black_24dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/miles"
                        android:text="1.27 miles"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="4.8"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/rate_star"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:background="@drawable/review_star"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:paddingEnd="@dimen/dp_3"
                        android:paddingStart="@dimen/dp_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="(998)"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_30sdp"
                        android:background="@drawable/roundbackwithgrayback"
                        android:gravity="center"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@drawable/ic_location_on_black_24dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Delivery"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="(45 mins)"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_minimumorder"
                android:layout_width="match_parent"
                android:layout_below="@+id/rlt_location"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_30sdp"
                        android:background="@drawable/roundbackwithgrayback"
                        android:gravity="center"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@drawable/ic_location_on_black_24dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:text="$4.99 Minimum Order"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_30sdp"
                        android:background="@drawable/roundbackwithgrayback"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@drawable/ic_location_on_black_24dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:text="Open"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/rlt_minimumorder"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/_30sdp"
                        android:background="@drawable/roundbackwithgrayback"
                        android:gravity="center"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:background="@drawable/ic_location_on_black_24dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:text="Pre Order"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnr_meals"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/timee"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:text="00"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight=".1"
                    android:background="@drawable/rectanglegray"/>
                <TextView
                    android:id="@+id/miless"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#000"
                    android:text="00 "
                    android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight=".1"
                    android:background="@drawable/rectanglegray"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>